# Neta Application Configuration
# =========================

# General Settings
# ----------------
CONFIG_PATH=config/default.json
CHROME_PROFILE_PATH=data/.browser-profile
CACHE_FILE_PATH=data/.cache.json
LOG_LEVEL=INFO

# Integration Mode Controls
# ------------------------
# Set to "true" to use API instead of browser automation
USE_OPENAI_API=true
USE_CLAUDE_API=true
USE_GEMINI_API=true
USE_PERPLEXITY_API=true
USE_GROK_API=true

# API Keys
# --------
OPENAI_API_KEY=sk-your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key
GEMINI_API_KEY=your-gemini-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
GROK_API_KEY=your-grok-api-key

# API Configuration
# ----------------
# Common settings
MAX_IMAGE_SIZE_KB=500

# OpenAI
OPENAI_MAX_TOKENS=100
OPENAI_TEMPERATURE=0.7

# Claude
CLAUDE_MAX_TOKENS=100
CLAUDE_TEMPERATURE=0.7

# Gemini
GEMINI_MAX_TOKENS=100
GEMINI_TEMPERATURE=0.7

# Perplexity
PERPLEXITY_MAX_TOKENS=100
PERPLEXITY_TEMPERATURE=0.7
PERPLEXITY_API_URL=https://api.perplexity.ai/chat/completions

# Grok
GROK_MAX_TOKENS=100
GROK_TEMPERATURE=0.7
GROK_API_URL=https://api.x.ai/v1/chat/completions

# Browser Automation Delays
# ------------------------
UPLOAD_DELAY=2
IMAGE_PROCESSING_DELAY=2
RESPONSE_WAIT_TIME_TEXT=2
RESPONSE_WAIT_TIME_IMAGE=5
IMAGE_DOWNLOAD_DELAY=2
VIEWER_LOAD_DELAY=1
VIEWER_CLOSE_DELAY=1
UPLOAD_BUTTON_DELAY=2
LOGIN_WAIT_DELAY=1
LOOP_INTERVAL_DELAY=5
MAX_RESPONSE_WAIT=30
